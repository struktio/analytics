{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"dom",
			"es6",
			"es2017"
		],
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"typeRoots": [
			"./node_modules/@types",
			"./src/types/*"
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"entry": "./src/index.ts",
	"include": [
		"./src/index.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test",
	]
}